<div class="container">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="potential-user" id="<%=potentialUser.id%>"></div>
    <ol class="carousel-indicators">
      <% var slideNum = 0; %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%=slideNum%>" class="active"></li>
      <% if(potentialUser.profile_pics.length > 1){ %>
        <% for(var i = 1; i < potentialUser.profile_pics.length; i++){ %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
        <% } %>
      <% } %>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <a href="/potentials">
          <img class="d-block img-fluid potential pic-show" src="<%= potentialUser.profile_pics[0].url %>">
        </a>
      </div>
      <% if(potentialUser.profile_pics.length > 1){ %>
        <% for(var i = 1; i < potentialUser.profile_pics.length; i++){ %>
          <div class="carousel-item">
            <a href="/potentials">
              <img class="d-block img-fluid pic-show" src="<%= potentialUser.profile_pics[i].url %>">
            </a>
          </div>
        <% } %>
      <% } %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <i class="fa fa-chevron-left black" aria-hidden="true"></i>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <i class="fa fa-chevron-right black" aria-hidden="true"></i>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <p> <strong><%=potentialUser.name%></strong>, <%=potentialUser.age%> </p>

  <% if(potentialUser.school){ %>
    <p>Studies at <%= potentialUser.school %> </p>
  <% } %>

  <% if(potentialUser.work){ %>
    <p>Works at <%= potentialUser.work %> </p>
  <% } %>

  <hr>

  <% if (potentialUser.about){ %>
    <p><%= potentialUser.about %></p>
    <hr>
  <% } %>

  <p> <%= potentialUser.interests.length %> interests </p>

  <% potentialUser.interests.forEach(function(interest){ %>
    <p class="btn btn-secondary interest"><%= interest.name %></p>
  <% }); %>

</div>

<div class="row tinder-controls tinder-controls-zoom">
  <div class="col-12 col-sm-4 offset-sm-4">
    <div class="row">
      <div class="col-4 text-center">
          <button class="btn btn-secondary btn-dislike-zoom red-background">
            <i class="fa fa-times fa-2x white" aria-hidden="true"></i>
          </button>
      </div>
      <div class="col-4 text-center">
        <button class="btn btn-secondary btn-superlike-zoom blue-background">
          <i class="fa fa-star fa-2x white" aria-hidden="true"></i>
        </button>
      </div>
      <div class="col-4 text-center">
        <button class="btn btn-secondary btn-like-zoom green-background">
          <i class="fa fa-heart fa-2x white" aria-hidden="true"></i>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- MODal -->
<div id="modal-match-<%=potentialUser.id%>" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <h1 class="match-text text-center white">It's a Match!</h1>
        <h3 class="text-center white">You and <%= potentialUser.name %> have liked each other.</h3>
      <div class="row text-center">
        <div class="col-5 offset-1">
          <img class="match-pic" src="<%= currentUser.profile_pics[0].url %>" class="text-left">
        </div>
        <div class="col-5">
          <img class="match-pic" src="<%= potentialUser.profile_pics[0].url %>" class="text-left">
        </div>
      </div>
      <br>
      <div class="match">
          <h2 class="text-center">
            <a href="/chatroom/<%= potentialUser.id %>" class="btn btn-danger">SEND A MESSAGE</a>
          </h2>
          <br>
          <h2 class="text-center">
            <a href="/potentials" class="btn btn-transparent white">KEEP SWIPING</a>
          </h2>
      </div>
    </div>
  </div>
</div>

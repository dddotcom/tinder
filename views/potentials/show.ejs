<div class="container">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="potential-user" id="<%=potentialUser.id%>"></div>
    <ol class="carousel-indicators">
      <% var slideNum = 0; %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%=slideNum%>" class="active"></li>
      <% if(potentialUser.profile_pics.length > 1){ %>
        <% for(var i = 1; i < potentialUser.profile_pics.length; i++){ %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
        <% } %>
      <% } %>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <img class="d-block img-fluid potential" src="<%= potentialUser.profile_pics[0].url %>">
      </div>
      <% if(potentialUser.profile_pics.length > 1){ %>
        <% for(var i = 1; i < potentialUser.profile_pics.length; i++){ %>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="<%= potentialUser.profile_pics[i].url %>">
          </div>
        <% } %>
      <% } %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <p> <strong><%=potentialUser.name%></strong>, <%=potentialUser.age%> </p>

  <% if(potentialUser.school){ %>
    <p>Studies at <%= potentialUser.school %> </p>
  <% } %>

  <% if(potentialUser.work){ %>
    <p>Works at <%= potentialUser.work %> </p>
  <% } %>

  <hr>

  <p><%= potentialUser.about %></p>

  <hr>

  <p> <%= potentialUser.interests.length %> interests </p>

  <% potentialUser.interests.forEach(function(interest){ %>
    <p class="btn btn-secondary"><%= interest.name %></p>
  <% }); %>

</div>

<div class="row tinder-controls-zoom">
  <div class="col-4 offset-4">
    <div class="row">
      <div class="col-4 text-center">
        <button class="btn btn-secondary btn-dislike red-background">
          <i class="fa fa-times fa-2x white" aria-hidden="true"></i>
        </button>
      </div>
      <div class=" col-4 text-center">
        <button class="btn btn-secondary btn-superlike blue-background">
          <i class="fa fa-star fa-2x white" aria-hidden="true"></i>
        </button>
      </div>
      <div class="col-4 text-center">
        <button class="btn btn-secondary btn-like green-background">
          <i class="fa fa-heart fa-2x white" aria-hidden="true"></i>
        </button>
      </div>
    </div>
  </div>


</div>

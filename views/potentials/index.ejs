<div class="container">
  <% potentialUsers.forEach(function(potentialUser){ %>
    <a href="/potentials/<%=potentialUser.id%>"><img src=<%=potentialUser.profile_pics[0].url%>></a>

    <p><strong><%=potentialUser.name%></strong>, <%=potentialUser.age%></p>
    <% if(potentialUser.school){ %>
      <p>Studies at <%= potentialUser.school %> </p>

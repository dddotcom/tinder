<div class="container">
  <header>
    <a href="#" class="btn btn-danger"><i class="fa fa-user-circle fa-2x" aria-hidden="true"></i></a>
    <a href="/potentials" class="btn btn-secondary"><i class="fa fa-tint fa-2x" aria-hidden="true"></i></a>
    <a href="/chatroom/<%=user.id%>" class="btn btn-secondary"><i class="fa fa-weixin fa-2x" aria-hidden="true"></i></a>
  </header>
</div>
<div class="container">

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% var slideNum = 0; %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%=slideNum%>" class="active"></li>
      <% if(user.profile_pics.length > 1){ %>
        <% for(var i = 1; i < user.profile_pics.length; i++){ %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
        <% } %>
      <% } %>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <img class="d-block img-fluid" src="<%= user.profile_pics[0].url %>">
      </div>
      <% if(user.profile_pics.length > 1){ %>
        <% for(var i = 1; i < user.profile_pics.length; i++){ %>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="<%= user.profile_pics[i].url %>">
          </div>
        <% } %>
      <% } %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <a href="/profile/<%=user.id%>/edit" class="btn btn-danger"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
  <p>
    <strong><%= user.name %></strong>, <%= user.age %>
  </p>

  <% if(user.school){ %>
    <p>Studies at <%= user.school %> </p>
  <% } %>

  <% if(user.work){ %>
    <p>Works at <%= user.work %> </p>
  <% } %>
  <hr>

  <p><%= user.about %></p>

  <hr>
  <p> <%= user.interests.length %> interests </p>

  <% user.interests.forEach(function(interest){ %>
    <p class="btn btn-secondary"><%= interest.name %></p>
  <% }); %>

  <hr>
  <a href="/profile/<%=user.id%>/settings">Settings</a>
</div>

<div class="container">
  <div class="row nav-bar">
    <div class="col-12 col-sm-4 text-center">
        <a href="/profile" class="nav-btn btn btn-danger red-background"><i class="fa fa-user-o fa-2x" aria-hidden="true"></i></a>
    </div>
    <div class="col-12 col-sm-4 text-center">
      <a href="/potentials" class="nav-tinder btn btn-secondary">
        <img src="/images/logo-white.png">
      </a>
    </div>
    <div class="col-12 col-sm-4 text-center">
      <a href="/chatroom" class="nav-btn btn btn-secondary"><p>...</p></a>
    </div>
  </div>
</div>
<div class="container">

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% var slideNum = 0; %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%=slideNum%>" class="active"></li>
      <% if(user.profile_pics.length > 1){ %>
        <% for(var i = 1; i < user.profile_pics.length; i++){ %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
        <% } %>
      <% } %>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <img class="d-block img-fluid" src="<%= user.profile_pics[0].url %>">
      </div>
      <% if(user.profile_pics.length > 1){ %>
        <% for(var i = 1; i < user.profile_pics.length; i++){ %>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="<%= user.profile_pics[i].url %>">
          </div>
        <% } %>
      <% } %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <i class="fa fa-chevron-left black" aria-hidden="true"></i>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <i class="fa fa-chevron-right black" aria-hidden="true"></i>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <a href="/profile/edit" class="btn btn-danger"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
  <br><br>

  <div class="profile-content">
    <h4>
      <strong><%= user.name %></strong>, <%= user.age %>
    </h4>

    <% if(user.school){ %>
      <p>Studies at <%= user.school %> </p>
    <% } %>

    <% if(user.work){ %>
      <p>Works at <%= user.work %> </p>
    <% } %>

    <% if(!user.work && !user.school){ %>
      <p class="gray"><i>There's nothing to show here</i></p>
    <% } %>

    <hr>

    <% if(user.about){ %>
        <p><%= user.about %></p>
    <% } else { %>
        <p class="gray"><i>There's nothing to show here</i></p>
    <% } %>


    <hr>
    <p> <%= user.interests.length %> interests </p>

    <% user.interests.forEach(function(interest){ %>
      <button id="<%=interest.id%>" class="btn btn-secondary delete-interest"><i class="fa fa-close" aria-hidden="true"></i>  <%= interest.name %></button>
    <% }); %>

  </div>

  <br>

  <form method="POST" action="/profile/addInterest" class="form-group">
    <div class="form-group row">
      <div class="col-11">
        <input type="text" name="interests" class="form-control form-control-lg" placeholder="Add more comma-separated interests">
      </div>
      <div class="col-1">
        <button type="submit" class="btn btn-danger">
          <i class="fa fa-plus-square-o fa-2x" aria-hidden="true"></i>
        </button>
      </div>
    </div>

  </form>

  <hr>
  <p><a href="/profile/settings">Settings</a></p>
</div>

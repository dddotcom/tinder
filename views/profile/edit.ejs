<div class="container">
  <a href="/profile"><i class="fa fa-angle-left" aria-hidden="true"></i> Back</a>
  <h1>Edit Profile</h1>

  <br>

  <% user.profile_pics.forEach(function(pic){ %>
    <img src="<%= pic.url %>">
    <a href="#" class="btn btn-danger"><i class="fa fa-random" aria-hidden="true"></i></a>
  <% }) %>

  <form action="/profile" class="put-form">
    <div class="form-group">
      <label for="about">About <%= user.name %></label>
      <input type="text" name="about" class="form-control" value="<%= user.about %>">
    </div>
    <div class="form-group">
      <label for="work">Current Work</label>
      <input type="text" name="work" class="form-control" value="<%= user.work %>">
    </div>
    <div class="form-group">
      <label for="school">School</label>
      <input type="text" name="school" class="form-control" value="<%= user.school %>">
    </div>
    <div class="form-group">
      <label for="interests">Interests: </label>
      <br>
      <% user.interests.forEach(function(interest){ %>
        <p class="btn btn-secondary"><%= interest.name %></p>
      <% }); %>
    </div>
    <input type="submit" class="btn btn-danger" value="Save Changes">
  </form>
</div>
